<UserControl x:Class="JM.DR.WPF.Controls.GameListControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
>
  <Border BorderBrush="White" BorderThickness="1" CornerRadius="3">
    <ListBox Name="gameListBox" Background="Transparent" BorderThickness="0"
                 ItemTemplate="{StaticResource GameTemplate}"
                 ItemContainerStyle="{StaticResource GlowItemContainer}"
           >
    </ListBox>
  </Border>

</UserControl>
